# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=memory://  # Use redis:// for production with Redis

# CORS configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,http://10.0.0.0/24
# For production, set to your actual domain: https://darshi.in,https://www.darshi.in

# Admin configuration
ADMIN_TOKEN_EXPIRE_MINUTES=60  # Admin sessions expire after 1 hour

# Logging & Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/darshi.log  # Set to empty string to disable file logging
ENABLE_SENTRY=false  # Set to true to enable Sentry error tracking
SENTRY_DSN=  # Your Sentry DSN from https://sentry.io
ENVIRONMENT=development  # development, staging, production

# ===== EMAIL CONFIGURATION =====
# Enable/disable email service
EMAIL_ENABLED=true

# Email backend: smtp or sendgrid
EMAIL_BACKEND=smtp

# Sender details
EMAIL_FROM=noreply@darshi.gov.in
EMAIL_FROM_NAME=Darshi

# SMTP Configuration (for Gmail or other SMTP servers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
# For Gmail: Enable 2FA, then generate App Password at https://myaccount.google.com/apppasswords

# SendGrid Configuration (alternative to SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# ===== SMS/PHONE VERIFICATION CONFIGURATION =====
# Enable/disable SMS service
SMS_ENABLED=true

# SMS backend: firebase, twilio, or aws_sns
SMS_BACKEND=firebase

# Firebase Phone Auth (RECOMMENDED - FREE up to 10k/month)
# No additional config needed - uses your service-account.json
# Enable in Firebase Console: Authentication > Sign-in method > Phone

# Twilio Configuration (alternative)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AWS SNS Configuration (alternative)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ===== FIREBASE AUTHENTICATION (RECOMMENDED) =====
# Firebase handles ALL OAuth providers (Google, GitHub, Facebook) + Phone Auth
# Setup: See FIREBASE_SETUP.md
# Enable providers in Firebase Console: Authentication > Sign-in method
# Backend verifies Firebase ID tokens using Firebase Admin SDK (service-account.json)
# No additional configuration needed for backend!

# ===== LEGACY OAUTH PROVIDERS (DEPRECATED) =====
# These are for the old custom OAuth implementation
# Recommend using Firebase Auth instead (see above)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/auth/github/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/api/v1/auth/facebook/callback

# ===== BROWSER PUSH NOTIFICATIONS (VAPID) =====
# Generate VAPID keys by running: python3 scripts/generate_vapid_keys.py
# IMPORTANT: Keep the private key secure! Never commit it to git.
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_ADMIN_EMAIL=admin@darshi.app
